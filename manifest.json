{
  "name": "Netflix Freedom",
  "description": "Evita las restricciones de uso compartido de cuentas en Netflix",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
        "resources": [
          "netflix-seeker.js",
          "netflix-audioChange.js",
          "netflix-substitleChange.js"
        ],
        "matches": ["*://*.netflix.com/*"]
    }
  ],
  "content_scripts": [
    {
      "js": ["Main.js"],
      "css": ["netflix-controller.css"],
      "matches": [
        "*://*.netflix.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}